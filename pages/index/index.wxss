/* index.wxss */
.container {
  padding: 6px;
}

.header {
  width: 100%;
  background-color: green;
  padding: 10px;
  display: flex;
  justify-content: center;
  align-items: left;
  
}

.search-box {
  width: 100%;
  background-color: white;
  border-radius: 20px;
  padding: 5px 10px;
}

.search-box input {
  width: 100%;
  height: 30px;
  border: none;
  outline: none;
}

swiper {
  width: 100%;
  height: 200px;
  border-radius: 20px;
  transform: translateY(0);
  margin-top: 1px;
  position: relative;
  
  
}

swiper image {
  width: 100%;
  height: 100%;
  border-radius: 20px; 

}

.swiper-text {
  position: absolute;
  bottom: 10px;
  left: 10px;
  color: white;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 5px 10px;
  border-radius: 5px;
}

.categories {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.category-item image {
  width: 50px;
  height: 50px;
}

.hot-products {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
}

.product-item {
  width: 48%;
  border: 1px solid #ddd;
  border-radius: 10px;
  overflow: hidden;
}

.product-item image {
  width: 100%;
  height: 150px;
}

.product-info {
  padding: 10px;
  background-color: white;
  text-align: center;
}