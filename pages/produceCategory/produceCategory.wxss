/* pages/category/category.wxss */
.container {
  display: flex;
  height: 100vh;
  background-color: #f5f5f5;
}

.category-list {
  width: 30%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  border-right: 1px solid #ddd;
  box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
}



.category-item {
  padding: 20rpx;
  text-align: center;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
  color: #333;
}

.category-item.active {
  background-color: #f0f0f0;
  color: #f00;
  font-weight: bold;
}

.product-list {
  width: 70%;
  margin-left: 30%;
  padding: 30rpx;
  background-color: #fff;
  position: relative;
  
}

.product-scroll {
  height: 100vh; /* 商品列表从页面顶部开始 */
  
}

.product-item {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #ddd;
  padding-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  
  overflow-y: auto;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: #333;
}

.product-price {
  color: #f00;
  font-size: 28rpx;
  margin-bottom: 10rpx;

}


.add-to-cart {
  background-color: #f00;
  color: #fff;
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  font-size: 30rpx;
  display: inline-block; /* 确保按钮是内联块元素 */
  width: auto; /* 宽度自适应内容 */
  white-space: nowrap; /* 防止文字换行 */

}