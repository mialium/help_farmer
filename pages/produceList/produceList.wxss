.container {
    padding: 20px;
    background-color: #f5f5f5;
}

.title {
    text-align: center;
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
}

.product-list {
    width: 100%;
    padding: 0;
}

.product-row {
    display: flex;
    width: 100%;
    justify-content: space-between;
    margin-bottom: 20px;
}

.product-item {
    width: 48%; /* 每列占据48%的宽度，留出2%的间距 */
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.product-image {
    width: 100%;
    height: 150px; /* 设置图片高度 */
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.product-info {
    padding: 10px;
}

.product-name {
    font-size: 18px;
    color: #333;
    margin-bottom: 5px;
}

.product-price {
    font-size: 16px;
    color: #e74c3c;
}

.product-cart {
    width: 100%;
    height: 20px; /* 设置图片高度 */
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}
